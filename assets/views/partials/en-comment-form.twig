<div class="comment-form">
    <form id="form" class="comment-form" method="post" action="{{ site.site_url~'/wp-comments-post.php' }}">
        <div class="row">
            <div class="col-12 mb-3">
                <textarea class="form-control" name="comment" rows="6" placeholder="Comment*" id="comment" required=""></textarea>
            </div>
        </div>
        {% if user %}
        <input type="hidden" name="email" value="{{ user.email }}">
        <input type="hidden" name="author" value="{{ user.name }}">
        <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
        <div class="row">
            <div class="col-12 col-md-4 mb-3">
                <input type="text" class="form-control" name="author" placeholder="First Name*" id="author" required="" />
            </div>
            <div class="col-12 col-md-4 mb-3">
                <input type="email" class="form-control" name="email" placeholder="Email*" id="email" data-parsley-error-message="Please enter a valid email address" data-parsley-trigger="change" required="" />
            </div>
            <div class="col-12 col-md-4 mb-3">
                <input type="text" class="form-control" name="url" placeholder="Website" id="url" />
            </div>
        </div>
        {% endif %}
        <div class="row">
            <div class="col-12 mt-1">
                <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
                <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">
                <button type="submit" name="Submit" class="btn fp-btn fp-btn-cloud fp-btn-shadow form-submit">Post Comment</button>
            </div>
        </div>
    </form>
</div>